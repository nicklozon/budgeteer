  "version": "0.2.0",
  "configurations": [
    {
      "type": "ruby_lsp",
      "name": "Debug test (file)",
      "request": "launch",
      "program": "bundle exec rails test ${relativeFile}"
    },
    {
      "type": "ruby_lsp",
      "name": "Debug test (line)",
      "request": "launch",
      "program": "bin/rails test ${relativeFile}:${lineNumber}"
    },
    {
      "type": "ruby_lsp",
      "name": "Attach debugger",
      "request": "attach"
    }
  ]
}
